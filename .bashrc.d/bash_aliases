# ~/.bashrc.d/bash_aliases

# Option presets

# bat
alias kat='bat --theme TwoDark --style=plain --paging=never'

# ps
alias psc='ps xawf -eo pid,user,cgroup,args'

# rsync
alias rget='rsync -r -v --progress -c --partial -e ssh'

# zellij
alias zel='zellij --layout compact options --simplified-ui true --theme catppuccin-mocha'

# mpv/mplayer
# alias mpa='mplayer -vo null'
# alias mpp='mplayer -ao null -fs'
alias mpa='mpv --no-video'
alias mpp='mpv --fs --no-audio'

# Handle typos
alias :q='exit'
alias :Q='exit'
alias lcd='cd'
alias lls='ls'

# Ping
alias ping-1='ping 1.1.1.1'
alias ping-8='ping 8.8.8.8'
