# .ssh/config

IdentityFile ~/.ssh/key_owain

# For LANs
Host 192.168.*
    UserKnownHostsFile /dev/null
    StrictHostKeyChecking no

# For Git
Host *.github.com
    IdentityFile ~/.ssh/key_github

# For Fedora Project
Host *.fedoraproject.org fedorapeople.org *.fedorahosted.org
    IdentityFile ~/.ssh/key_fedora

# For Private Servers
Host example
    HostName example.org
    User gaveen
    UserKnownHostsFile ~/.ssh/known_hosts_example
